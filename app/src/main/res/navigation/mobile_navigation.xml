<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_perfil">

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.principal.agrotiliapp.ui.perfil.PerfilFragment"
        android:label="@string/perfil"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_nav_perfil_to_cambiarClaveFragment"
            app:destination="@id/cambiarClaveFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_tareas"
        android:name="com.principal.agrotiliapp.ui.tareas.TareasFragment"
        android:label="@string/tareas"
        tools:layout="@layout/fragment_tareas" >
        <action
            android:id="@+id/action_nav_tareas_to_camposFragment"
            app:destination="@id/camposFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.principal.agrotiliapp.ui.logouts.LogoutsFragment"
        android:label="@string/logout"
        tools:layout="@layout/fragment_logouts" />
    <fragment
        android:id="@+id/cambiarClaveFragment"
        android:name="com.principal.agrotiliapp.ui.perfil.CambiarClaveFragment"
        android:label="@string/cambiar_clave"
        tools:layout="@layout/fragment_cambiar_clave" >
        <action
            android:id="@+id/action_cambiarClaveFragment_to_nav_perfil"
            app:destination="@id/nav_perfil" />
    </fragment>
    <fragment
        android:id="@+id/camposFragment"
        android:name="com.principal.agrotiliapp.ui.tareas.campos.CamposFragment"
        android:label="fragment_campos"
        tools:layout="@layout/fragment_campos" >
        <action
            android:id="@+id/action_camposFragment_to_nav_tareas"
            app:destination="@id/nav_tareas" />
    </fragment>
</navigation>